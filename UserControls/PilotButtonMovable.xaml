<UserControl x:Class="XLPilot.UserControls.PilotButtonMovable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XLPilot.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Border x:Name="MainBorder" 
            Background="White" 
            BorderBrush="Transparent" 
            BorderThickness="0" 
            CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" 
                   Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Stretch="Uniform" 
                   Margin="10"/>
            <TextBlock Grid.Row="1" 
                       Text="{Binding ButtonText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       HorizontalAlignment="Center" 
                       TextWrapping="Wrap" 
                       TextAlignment="Center"
                       Margin="5,0,5,5"/>
        </Grid>
    </Border>
</UserControl>