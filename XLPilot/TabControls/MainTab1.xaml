<UserControl x:Class="XLPilot.TabControls.MainTab1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XLPilot.TabControls"
             xmlns:cc="clr-namespace:XLPilot.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="620">
    <Grid x:Name="grdMainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Stretch">
                <!-- Content will be added programmatically -->
            </StackPanel>
        </ScrollViewer>

        <GridSplitter Grid.Row="1" Height="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="Black"/>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <!-- Content will be added programmatically -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>