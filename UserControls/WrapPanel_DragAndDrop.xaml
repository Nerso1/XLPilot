<UserControl x:Class="XLPilot.UserControls.WrapPanel_DragAndDrop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XLPilot.UserControls"
             mc:Ignorable="d" 
             Width="600" Height="Auto"
             d:DesignWidth="600">
    <!-- Enabling Mouse Wheel Scrolling -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled" 
                  PanningMode="VerticalOnly"
                  PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Project Section -->
            <TextBlock Grid.Row="0" Text="Twoje ikony XL" Margin="5" FontSize="16"/>

            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
                <Grid>
                    <ListView x:Name="projectListView" 
                              MinHeight="120" 
                              ItemsSource="{Binding ProjectItems}"
                              PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown"
                              MouseMove="ListView_MouseMove"
                              DragEnter="ListView_DragEnter"
                              DragOver="ListView_DragOver"
                              Drop="ListView_Drop"
                              DragLeave="ListView_DragLeave"
                              AllowDrop="True"
                              Background="Transparent"
                              BorderThickness="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="2"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="100" HorizontalAlignment="Center" />
                                <!-- Center the WrapPanel -->
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <local:PilotButtonMovable Width="100" Height="100" 
                                                         ImageSource="{Binding ImageSource}" 
                                                         ButtonText="{Binding ButtonText}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Empty state message -->
                    <TextBlock Text="Przeciągnij wybrane ikony do tego obszaru" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               Foreground="Gray"
                               FontSize="16"
                               FontStyle="Italic">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ProjectItems.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- Toolbox Section -->
            <TextBlock Grid.Row="2" Text="Ikony do wyboru" Margin="5" FontSize="16"/>

            <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Margin="5">
                <ListView x:Name="toolboxListView" 
                          ItemsSource="{Binding ToolboxItems}"
                          PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown"
                          MouseMove="ListView_MouseMove"
                          DragEnter="ListView_DragEnter"
                          DragOver="ListView_DragOver"
                          Drop="ListView_Drop"
                          DragLeave="ListView_DragLeave"
                          AllowDrop="True"
                          Background="Transparent"
                          BorderThickness="0"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="2"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel ItemWidth="100" HorizontalAlignment="Center" />
                            <!-- Center the WrapPanel -->
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <local:PilotButtonMovable Width="100" Height="100" 
                                                     ImageSource="{Binding ImageSource}" 
                                                     ButtonText="{Binding ButtonText}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>