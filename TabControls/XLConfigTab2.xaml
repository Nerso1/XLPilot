<UserControl x:Class="XLPilot.TabControls.XLConfigTab2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XLPilot.TabControls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="620">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Name="tbXLName" Text="Nazwa" FontSize="16"/>
            <TextBlock Grid.Row="1" Name="tbXLPath" Text="Ścieżka" FontSize="16"/>
            <TextBlock Grid.Row="2" Name="tbXLDatabase" Text="Baza danych" FontSize="16"/>
            <TextBlock Grid.Row="3" Name="tbXLLicenseServer" Text="Serwer klucza" FontSize="16"/>
            <TextBlock Grid.Row="4" Name="tbXLLicenseKey" Text="Klucz" FontSize="16"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtXLName" FontSize="16"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtXLPath" FontSize="16"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtXLDatabase" FontSize="16"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtXLLicenseServer" FontSize="16"/>
            <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtXLLicenseKey" FontSize="16"/>
        </Grid>

        <ListView Grid.Row="1" x:Name="lstXLList"/>

        <Grid Grid.Row="2">
            <!--<Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" 
                   Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Stretch="Uniform"
                   Margin="10"/>

            <TextBlock Grid.Row="1" 
                       Text="{Binding ButtonText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       HorizontalAlignment="Center"
                       Margin="5"
                       FontWeight="Bold"/>-->
        </Grid>



    </Grid>

</UserControl>
